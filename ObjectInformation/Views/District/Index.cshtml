@using System.Security.Policy
@using System.Web.Mvc
@using System.Web.Mvc.Html
@using ObjectInformation.DAL.Model
@model Country
@{
    ViewBag.Title = "Область";
}
<!-- BEGIN PAGE HEADER-->
<h3 class="page-title">
    Районы <small>...</small>
</h3>

<div class="page-bar">
    <ul class="page-breadcrumb">
        <li>
            <i class="fa fa-home"></i>
            <a href="@Url.Action("Index", "Home")">Главная</a>
            <i class="fa fa-angle-right"></i>
        </li>
        <li>
            <a href="#">Регионы</a>
            <i class="fa fa-angle-right"></i>
        </li>
    </ul>

    <div class="page-toolbar">
        <div class="btn-group pull-right">
            <button type="button" class="btn btn-fit-height grey-salt dropdown-toggle" data-toggle="dropdown" data-hover="dropdown" data-delay="1000" data-close-others="true">
                Действия <i class="fa fa-angle-down"></i>
            </button>
            <ul class="dropdown-menu pull-right" role="menu">
                <li>
                    <a href="#" onclick="AppDistrict.GetModalWindowForEditandPopulate(null, this);">Добавить</a>
                </li>
                <li>
                    <a href="#">Импорт в Excel</a>
                </li>
            </ul>
        </div>
    </div>
</div>
<!-- END PAGE HEADER-->


<div class="row">
    <div class="col-md-12">

        @foreach (var country in (List<Country>)ViewBag.Countries)
        {
            <h3>@country.CountryName</h3>
            foreach (var region in country.Regions)
            {
                <h4>@region.RegionName</h4>

                foreach (var city in (List<City>)ViewBag.Cities)
                {
                    <h5>@city.CityName</h5>
                    <table id="tableDistrict_@city.CityId" class="table table-bordered table-advance table-hover table-striped">
                        <thead>
                        <tr>
                            <th>Номер</th>
                            <th> Наименование города</th>
                            <th></th>
                        </tr>
                        </thead>
                        <tbody>
                        @foreach (var district in ((List<District>)ViewBag.Districts).Where(w=>w.CityId == city.CityId))
                        {
                            <tr>
                                <td>@district.DistrictId</td>
                                <td>@district.DistrictName</td>
                                <th></th>
                            </tr>
                        }
                        </tbody>
                    </table>
                }
            }
        }

        @Html.Partial("District/_modifyDistrict")

    </div>
</div>

@section Scripts
{
    <script src="../../Content/assets/plugins/AppDistrict.js"></script>

    <script>
        $(document).ready(function () {
            AppDistrict.init();
        });
    </script>
}