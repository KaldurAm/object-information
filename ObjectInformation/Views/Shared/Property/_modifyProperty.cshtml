@using System.Web.Mvc.Html
@model ObjectInformation.DAL.Model.Property
<div id="modifyProperty" class="modal fade" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true"></button>
            </div>
            @using (Html.BeginForm())
            {
                <div class="modal-body" style="margin-bottom:-25px; padding:0px;">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-horizontal ">
                                <div class="form-body">
                                    <input type="hidden" name="PropertyId" id="PropertyId" value="0">
                                    <br style="clear: both"/>

                                    <div class="form-group">
                                        <label class="col-md-4 control-label">Наименование</label>
                                        <div class="col-md-7">
                                            @Html.TextBoxFor(model => Model.Name, new { @class = "form-control input-sm", @style = "font-size:12px" })
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <label class="col-md-4 control-label">Ед.измерения</label>
                                        <div class="col-md-7">
                                            @Html.DropDownList("UnitId", Enumerable.Empty<SelectListItem>(), String.Empty, new { @class = "form-control", @style = "font-size:14px" })
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <label class="col-md-4 control-label">Типы объектов</label>
                                        <div class="col-md-7">
                                            <input type="hidden" id="ObjectTypeId" name="ObjectTypeId" class="form-control select2" value="">
                                        </div>
                                    </div>


                                    <br style="clear: both" />
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="modal-footer">
                    <button type="button" class="btn default" data-dismiss="modal">Close</button>
                    <input type="submit" value="Добавить" id="addButton" class="btn btn-primary" onclick="AppProperty.ValidateForm(this); " />
                </div>
            }
        </div>
    </div>
</div>

