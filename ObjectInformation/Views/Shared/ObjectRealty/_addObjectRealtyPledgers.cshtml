@using System.Web.Mvc.Html
<div id="modifyObjectRealtyPledgers" class="modal fade" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true"></button>
            </div>
            @using (Html.BeginForm())
            {
                <div class="modal-body" style="margin-bottom:-25px; padding:0px;">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-horizontal ">
                                <div class="form-body">
                                    <input type="hidden" name="ObjectRealtyPledgersId" id="ObjectRealtyPledgersId" value="0">
                                    <input type="hidden" name="orpObjectRealtyId" id="orpObjectRealtyId" value="0">
                                    <br style="clear: both" />

                                    <div class="form-group">
                                        <label class="col-md-4 control-label">Залогодатель</label>
                                        <div class="col-md-7">
                                            <select class="form-control" id="PledgersId" name="PledgersId"></select>
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <label class="col-md-4 control-label">Залоговая стоимость</label>
                                        <div class="col-md-7">
                                            <input type="text" class="form-control" id="MortgageValue" name="MortgageValue" value="0"/>
                                            <span class="help-block">&nbsp;</span>
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <label class="col-md-4 control-label">Дата залога</label>
                                        <div class="col-md-7">
                                            <input class="form-control date-picker" id="PledgeDate" name="PledgeDate" value="">
                                            <span class="help-block">&nbsp;</span>
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <label class="col-md-4 control-label">Оценочная стоимость</label>
                                        <div class="col-md-7">
                                            <input class="form-control" id="AssessedValue" name="AssessedValue" value="0">
                                            <span class="help-block">&nbsp;</span>
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <label class="col-md-4 control-label">Дата оценки</label>
                                        <div class="col-md-7">
                                            <input type="text" class="form-control date-picker" id="EvaluationDate" name="EvaluationDate"/>
                                            <span class="help-block">&nbsp;</span>
                                        </div>
                                    </div>

                                    <br style="clear: both" />
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="modal-footer">
                    <button type="button" class="btn default" data-dismiss="modal">Close</button>
                    <input type="submit" value="Добавить" id="" onclick="AppObjectRealty.ValidateFormObjectPledgers(this); " class="btn btn-primary" />
                </div>
            }
        </div>
    </div>
</div>
