@using System.Web.Mvc.Html
<div id="modifyObjectProperty" class="modal fade" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true"></button>
            </div>
            @using (Html.BeginForm())
            { 
                <div class="modal-body" style="margin-bottom:-25px; padding:0px;">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-horizontal ">
                                <div class="form-body">
                                    <input type="hidden" name="ObjectPropertyId" id="ObjectPropertyId" value="0">
                                    <input type="hidden" name="PropObjectRealtyId" id="PropObjectRealtyId" value="0">
                                    <br style="clear: both" />

                                    <div class="form-group">
                                        <label class="col-md-4 control-label">Значение</label>
                                        <div class="col-md-7">
                                            <input class="form-control" id="Value" name="Value" value="">
                                            <span class="help-block">Введите значение свойства</span>
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <label class="col-md-4 control-label">Свойство</label>
                                        <div class="col-md-7">
                                            <select class="form-control" id="PropertyId" name="PropertyId"></select>
                                        </div>
                                    </div>

                                    <br style="clear: both" />
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="modal-footer">
                    <button type="button" class="btn default" data-dismiss="modal">Close</button>
                    <input type="submit" value="Добавить" id="addButton" class="btn btn-primary" onclick="AppObjectRealty.ValidateFormObjectProperty(this); " />
                </div>
            }
        </div>
    </div>
</div>
